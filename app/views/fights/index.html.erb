<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1><i>TOUS LES BATTLES</i> </h1>
		</div>
		<div class="row">
			<% @fights.each do |f| %>
				<div class="col-xs-6 card">
					
					<h2>COMBAT N# <%= f.id %></h2>
					<h3><%= f.winner.name.capitalize %> a gagné !</h3>
					<h4><%= f.looser.name.capitalize %> a perdu.</h4>
					<%= link_to "Voir le score", fight_path(f), class: "btn btn-primary margin-top-20" %>

				</div>
			<% end %>
		</div>	
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 margin-top-50">
				<p><%= link_to "Retour dans l'arène", new_fight_path %></p>
		</div>
	</div>
</div>